<div class="flex items-start gap-6">
    <div class="relative w-24 h-24 md:w-32 md:h-32 rounded-lg overflow-hidden flex-shrink-0">
        <img src="<%= user.photo %>" alt="<%= user.firstName %> <%= user.lastName %>" class="object-cover w-full h-full">
    </div>
    <div class="flex flex-col gap-2">
        <h1 class="text-2xl md:text-3xl font-bold">
            <%= user.firstName %> <%= user.lastName %>
        </h1>
        <h2 class="text-lg md:text-xl text-gray-600"><%= user.title %></h2>
    </div>
</div>

